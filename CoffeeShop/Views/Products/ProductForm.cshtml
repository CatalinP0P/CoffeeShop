@model CoffeeShop.Models.ProductViewModel

@using (Html.BeginForm("Save", "Products"))
{
    <div class="form-group">
        <label> Name </label>
        @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.Name)
    </div>

    <div>
        <label> Image URL </label>
        @Html.TextBoxFor(m=>m.Product.ImageURL, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label> Category </label>
        @Html.DropDownListFor(m => m.Product.Category, new SelectList(Model.Categories), "Choose Categorie", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.Category)
    </div>

    <div class="form-group">
        <label> Stock </label>
        @Html.TextBoxFor(m => m.Product.Stock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.Stock)
    </div>

    <div class="form-group">
        <label> Price </label>
        @Html.TextBoxFor(m => m.Product.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Product.Price)
    </div>

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.Product.Id)
    <button type="submit" class="btn btn-primary">Save</button>
    @if (Model.Product.Id != 0)
        {
            <button class="btn btn-primary"
                    type="submit"
                    asp-controller="Products"
                    asp-action="Delete"
                    asp-route-id="@Model.Product.Id" > Remove </button>
        }

 }


