@model Order

<div class="container text-dark pb-5" style="height: auto; background: #e3f1f9 " >
      <div class="container my-3">
        <h2 class="pt-5" >Comanda nr. @Model.Id</h2>

        <div class="card bg-white text-muted border-2">
          <div class="div mx-3 mt-3 ">
            <p> Plasata pe : <b> @Model.OrderDate </b> </p>
            <p> Total : <b> @Model.Price Lei </b> </p>
          </div>
        </div>

        <h3 class="mt-3" > Produse vandute si livrate de CoffeeShop </h3>

        <div class="card bg-white border-2">
          <div class="container  ">
            <h2 style="color: #33b5e5" class="mx-3 mt-3" > @Model.Status </h2>
            <button class="btn mx-3 mt-3 text-white"  style="width: 125px; background-color: #33b5e5;"> Istoric Livrare </button>

            <div class="row mt-4">
              
              <div class="col bg-transparent">
                <div class="card border-3 " style="height: 280px;">
                  <div class="container text-dark mt-3">
                    <p> <b> Modalitate de livrare </b> </p>
                    <p> Livrare prin curier </p>

                    <p class="text-muted mt-4" > Pentru </p>
                    <p> Nume( n/a ) </p>

                    <p class="text-muted mt-4" > Adressa </p>
                    <p> Str @Model.Street @Model.Number, @Model.City, @Model.Country </p>
                  </div>
                </div>
              </div>

              <div class="col bg-transparent">
                <div class="card border-3" style="height: 280px;">
                  <div class="container text-dark mt-3">
                    <p> <b> Date Facturare </b> </p>
                    <p class="text-muted" >Pentru</p>
                    <p> Nume( n/a ), @Model.PhoneNumber </p>

                    <p class="text-muted" > Adresa </p>
                    <p> Str @Model.Street @Model.Number </p>

                  </div>
                </div>
              </div>

              <div class="col bg-transparent">
                <div class="card border-3" style="height: 280px;">
                  <div class="container text-dark mt-3 ">
                    <p> <b> Modalitate de Plata </b> </p>
                    <p> Ramburs </p>
                    <p class="mt-5" > Valoare Totala : @Model.Price Lei </p>
                  </div>
                </div>
              </div>

            </div>

          PARTIAL VIEWS ---------

          <hr class="mx-2" >
            <div class="container text-end" style="height:100%;" >
              <p> Total Produst : n/a Lei </p>
              <p> Livrare : n/a Lei </p>
              <p> Total Plata : @Model.Price Lei </p>
            </div>
          </div>
            
        </div>
      </div>
    </div>
      